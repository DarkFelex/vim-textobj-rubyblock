function s:describe__select_i()
  It "<Plug>(textobj-rubyblock-i)"

  tabnew
  tabonly!

  silent put =[
  \   'class Foo',
  \   '  include Bar',
  \   'end',
  \ ]
  1 delete _
  normal! 2G

  execute "normal v\<Plug>(textobj-rubyblock-i)\<Esc>"
  Should [line("'<"), col("'<")] ==# [2, 1]
  Should [line("'>"), col("'>")] ==# [2, 14]

endfunction


